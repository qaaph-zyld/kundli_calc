# Application Settings
APP_NAME=kundli-calculator
APP_ENV=development
DEBUG=True
API_VERSION=v1

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings
DATABASE_URL=postgresql://user:password@localhost:5432/kundli_db

# Security Settings
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000"]

# Swiss Ephemeris Settings
EPHE_PATH=/path/to/ephemeris/files

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
